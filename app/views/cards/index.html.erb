<div class="nm-cards--main">
  <div class="nm-cards--text-container span10">
    <h1>Listing cards</h1>

    <table>
      <tr>
        <th>Pin</th>
        <th>Balance</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @cards.each do |card| %>
      <tr>
        <td><%= card.pin %></td>
        <td><%= card.balance %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Card', new_card_path %>
  </div>
</div>
